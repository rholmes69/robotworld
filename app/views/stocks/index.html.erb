<p id="notice"><%= notice %></p>

<h1>Listing Stocks</h1>

<table class="table table-bordered table-condensed table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Quantity</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @stocks.each do |stock| %>
      <tr>
        <td><%= stock.name %></td>
        <td><%= stock.quantity %></td>
        <td><%= stock.price %></td>
        <td><%= link_to 'Show', stock, class: 'btn btn-success' %></td>
        <td><%= link_to 'Edit', edit_stock_path(stock), class: 'btn btn-success' %></td>
        <td><%= link_to 'Destroy', stock, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-success' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Stock', new_stock_path, class: 'btn btn-lg btn-primary' %>
